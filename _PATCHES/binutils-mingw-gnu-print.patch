Use GNU printf formatting under MinGW

From: J.M. Eubank <john@thesnappy.net>

From
   <https://github.com/msys2/MINGW-packages/blob/master/mingw-w64-binutils/0110-binutils-mingw-gnu-print.patch>
---
 bfd/bfd-in.h       |    2 +-
 bfd/bfd-in2.h      |    2 +-
 binutils/dwarf.c   |    2 +-
 binutils/nm.c      |    2 +-
 binutils/prdbg.c   |    2 +-
 binutils/readelf.c |    4 ++--
 binutils/strings.c |    6 +++---
 gas/as.h           |    4 ++--
 gas/read.c         |    2 +-
 gold/configure     |    2 +-
 gold/configure.ac  |    2 +-
 include/ansidecl.h |    4 ++--
 12 files changed, 17 insertions(+), 17 deletions(-)

diff --git a/bfd/bfd-in.h b/bfd/bfd-in.h
index 76b17bf7..74c3e37f 100644
--- a/bfd/bfd-in.h
+++ b/bfd/bfd-in.h
@@ -158,7 +158,7 @@ typedef BFD_HOST_U_64_BIT symvalue;
 
 #if BFD_HOST_64BIT_LONG
 #define BFD_VMA_FMT "l"
-#elif defined (__MSVCRT__)
+#elif defined (__MSVCRT__) && !defined( __USE_MINGW_ANSI_STDIO)
 #define BFD_VMA_FMT "I64"
 #else
 #define BFD_VMA_FMT "ll"
diff --git a/bfd/bfd-in2.h b/bfd/bfd-in2.h
index 7c13bc8c..d54fcdf1 100644
--- a/bfd/bfd-in2.h
+++ b/bfd/bfd-in2.h
@@ -165,7 +165,7 @@ typedef BFD_HOST_U_64_BIT symvalue;
 
 #if BFD_HOST_64BIT_LONG
 #define BFD_VMA_FMT "l"
-#elif defined (__MSVCRT__)
+#elif defined (__MSVCRT__) && !defined(__USE_MINGW_ANSI_STDIO)
 #define BFD_VMA_FMT "I64"
 #else
 #define BFD_VMA_FMT "ll"
diff --git a/binutils/dwarf.c b/binutils/dwarf.c
index 35842f74..b96077d9 100644
--- a/binutils/dwarf.c
+++ b/binutils/dwarf.c
@@ -206,7 +206,7 @@ get_encoded_value (unsigned char **pdata,
 }
 
 #if defined HAVE_LONG_LONG && SIZEOF_LONG_LONG > SIZEOF_LONG
-# ifndef __MINGW32__
+#if !defined(__MSVCRT__) || defined(__USE_MINGW_ANSI_STDIO)
 #  define DWARF_VMA_FMT		"ll"
