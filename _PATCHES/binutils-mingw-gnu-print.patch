diff --git a/gas/read.c b/gas/read.c
index bf594f12..0d9da0bf 100644
--- a/gas/read.c
+++ b/gas/read.c
@@ -4414,7 +4414,7 @@ emit_expr_with_reloc (expressionS *exp,
 	{
 	  /* Leading bits contain both 0s & 1s.  */
 #if defined (BFD64) && BFD_HOST_64BIT_LONG_LONG
